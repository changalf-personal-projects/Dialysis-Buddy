<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="@dimen/cardview_side_margin"
    android:layout_marginStart="@dimen/cardview_side_margin"
    android:layout_marginRight="@dimen/cardview_side_margin"
    android:layout_marginEnd="@dimen/cardview_side_margin"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/vitals_date_box"
            android:src="@drawable/date" >

            <TextView
                android:id="@+id/month" />

            <TextView
                android:id="@+id/day" />

            <TextView
                android:id="@+id/year" />

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight" />

    </LinearLayout>

</android.support.v7.widget.CardView>
