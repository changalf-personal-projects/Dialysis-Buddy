<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_task"
        android:layout_margin="@dimen/space_between_date" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/time"
        android:layout_marginBottom="@dimen/space_between_date"
        android:layout_marginLeft="@dimen/space_between_date"
        android:layout_marginStart="@dimen/space_between_date"
        android:layout_marginRight="@dimen/space_between_date"
        android:layout_marginEnd="@dimen/space_between_date" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date"
        android:layout_marginBottom="@dimen/space_between_date"
        android:layout_marginLeft="@dimen/space_between_date"
        android:layout_marginStart="@dimen/space_between_date"
        android:layout_marginRight="@dimen/space_between_date"
        android:layout_marginEnd="@dimen/space_between_date" />

</LinearLayout>